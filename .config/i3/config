bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

# Letter bindings

# Show rofi 
bindsym $mod+d exec rofi -show combi

# Toggle popin terminal
bindsym $mod+u [instance="popin"] scratchpad show; move position center

bindsym $mod+x exec --no-startup-id i3lock -i $HOME/.wallpapers/cosmos.png

# Resize
bindsym $mod+shift+y exec --no-startup-id "bash ~/.config/scripts/i3resize left" 
bindsym $mod+shift+u exec --no-startup-id "bash ~/.config/scripts/i3resize down"
bindsym $mod+shift+i exec --no-startup-id "bash ~/.config/scripts/i3resize up" 
bindsym $mod+shift+o exec --no-startup-id "bash ~/.config/scripts/i3resize right" 
